  <% if resource.avatar.attached? %>
    <%= image_tag(url_for(resource.avatar.variant(resize_to_limit: [250, 250]))) %>
    <div class="form-check">
      <%= check_box_tag :remove_avatar, "true", false, class: 'form-check-input' %>
      <%= label_tag :remove_avatar, "Remove?", class: "form-check-label" %>
    </div>
  <% else %>
    <div class="form-group">
      <%= f.label :avatar, "Show us yer mug" %>
      <%= f.file_field :avatar, class: 'form-control' %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.submit t('devise.registrations.edit.update'), class: 'btn btn-primary' %>
  </div>
